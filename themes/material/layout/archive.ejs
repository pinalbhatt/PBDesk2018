menu1: posts
---
<%

    var title = '';
    var icon = theme.archive_font_awesome_icon_css;
    var subTitle = 'all posts';
    if (page.archive) {
        if (page.year) title = page.year + (page.month ? '/' + page.month : '');
        else title = __('archive_a');
    }

    var postList = [];
    if (page.category) {
        site.categories.forEach(function(item) {
            if(item.name === page.category) {
                postList = item.posts.slice();
            }
        });
        title = page.category;
        icon = 'fa-folder-o';
        subTitle = 'posts by category';
    }
    else if (page.tag) {
        site.tags.forEach(function(item) {
            if(item.name === page.tag) {
                postList = item.posts;
            }
        });
        title = "#" + page.tag;
        icon = 'fa-tag'
        subTitle = 'posts by tag'
    } else {
        postList = site.posts;
    }
%>

<div class="material-background bg-primary-dark"></div>
<div class="container">
    <div class="card wow slideInUp">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="card-block-big">
                        <h1 class="color-primary">Post Archives</h1>
                    </div>
                    <ul class="ms-timeline">
                        <% postList.each(function(item){ %>
                        <%- partial('_partial/article-archive', {item: item}) %>
                        <% }); %>
                    </ul>
                </div>
                <div class="col-md-4">

                </div>
            </div>
        </div>
    </div>
</div>


