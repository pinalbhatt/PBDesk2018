                            <a target="_blank" href="<%- googleplus_share_link(page) %>" class="btn btn-raised btn-google "><i class="zmdi zmdi-google-plus"></i> Google+</a>
                        </div>

                    </div>
                </div>

                <div class="card card-block card-primary">
                    <%- page.content %>
                </div>
                <div class="row text-center">
                    <%- partial('_partial/responsive-ad.ejs') %>
                </div>
                <div class="card card-block card-primary">
