    </ol>
    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        <% var idx = 0; for (var slide in site.data.hpcarousel) { %>
        <div class="item <%- idx==0?'active': '' %>">
            <img src="<%- site.data.hpcarousel[slide].image %>" class="img-responsive" alt="...">
            <div class="carousel-caption-blog">
                <h2 class="color-primary"><%- site.data.hpcarousel[slide].title %></h2>
                <p class="hidden-xs"><%- site.data.hpcarousel[slide].subtitle %></p>
            </div>
        </div>
        <% idx++; } %>
