<div id="carousel-home-blog" class="carousel ms-carousel slide card" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <% var idx = 0; for (var slide in site.data.hpcarousel) { %>
            <li data-target="#carousel-home-blog" data-slide-to="<%- idx %>" class="<%- idx==0?'active': '' %>"></li>
        <% idx++; } %>
